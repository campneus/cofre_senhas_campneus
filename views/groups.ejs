<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/groups.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="dashboard-body">
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-shield-alt"></i>
                <span class="logo-text">Sistema de Senhas</span>
            </div>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <nav class="sidebar-nav">
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="/dashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt"></i>
                        <span class="nav-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/passwords" class="nav-link">
                        <i class="fas fa-key"></i>
                        <span class="nav-text">Senhas</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/groups" class="nav-link active">
                        <i class="fas fa-layer-group"></i>
                        <span class="nav-text">Grupos</span>
                    </a>
                </li>
                <% if (user.role === 'admin') { %>
                <li class="nav-item">
                    <a href="/users" class="nav-link">
                        <i class="fas fa-users"></i>
                        <span class="nav-text">Usuários</span>
                    </a>
                </li>
                <% } %>
            </ul>
        </nav>

        <div class="sidebar-footer">
            <div class="user-info">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-details">
                    <span class="user-name"><%= user.name %></span>
                    <span class="user-role"><%= user.role === 'admin' ? 'Administrador' : 'Usuário' %></span>
                </div>
            </div>
            <button class="logout-btn" id="logoutBtn">
                <i class="fas fa-sign-out-alt"></i>
                <span class="nav-text">Sair</span>
            </button>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="main-header">
            <div class="header-left">
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title">Grupos de Senhas</h1>
            </div>
            <div class="header-right">
                <% if (user.role === 'admin') { %>
                <button class="btn btn-primary" id="addGroupBtn">
                    <i class="fas fa-plus"></i>
                    Novo Grupo
                </button>
                <% } %>
                <div class="user-menu">
                    <button class="user-menu-toggle" id="userMenuToggle">
                        <div class="user-avatar-small">
                            <i class="fas fa-user"></i>
                        </div>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <div class="user-menu-dropdown" id="userMenuDropdown">
                        <a href="#logout" class="dropdown-item" id="headerLogout">
                            <i class="fas fa-sign-out-alt"></i>
                            Sair
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Content Area -->
        <div class="content-area">
            <!-- Filtros -->
            <div class="filters-section">
                <div class="search-filters">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Buscar grupos..." id="searchGroups">
                    </div>
                    <div class="filter-buttons">
                        <button class="filter-btn active" data-filter="all">
                            Todos
                        </button>
                        <button class="filter-btn" data-filter="active">
                            Ativos
                        </button>
                        <% if (user.role === 'admin') { %>
                        <button class="filter-btn" data-filter="inactive">
                            Inativos
                        </button>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Lista de Grupos -->
            <div class="groups-container">
                <div class="groups-grid" id="groupsGrid">
                    <div class="loading-placeholder">
                        <i class="fas fa-spinner fa-spin"></i>
                        Carregando grupos...
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Modal de Grupo -->
    <div class="modal-overlay" id="groupModal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Novo Grupo</h3>
                <button class="modal-close" id="closeModal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="groupForm" class="modal-body">
                <input type="hidden" id="groupId">
                
                <div class="form-group">
                    <label for="groupName">Nome do Grupo *</label>
                    <input type="text" id="groupName" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="groupDescription">Descrição</label>
                    <textarea id="groupDescription" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <label for="groupColor">Cor do Grupo</label>
                    <div class="color-picker">
                        <input type="color" id="groupColor" value="#FFD700">
                        <div class="color-presets">
                            <button type="button" class="color-preset" data-color="#FFD700" style="background-color: #FFD700;"></button>
                            <button type="button" class="color-preset" data-color="#FFA500" style="background-color: #FFA500;"></button>
                            <button type="button" class="color-preset" data-color="#FF6347" style="background-color: #FF6347;"></button>
                            <button type="button" class="color-preset" data-color="#32CD32" style="background-color: #32CD32;"></button>
                            <button type="button" class="color-preset" data-color="#1E90FF" style="background-color: #1E90FF;"></button>
                            <button type="button" class="color-preset" data-color="#9370DB" style="background-color: #9370DB;"></button>
                        </div>
                    </div>
                </div>

                <% if (user.role === 'admin') { %>
                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="groupActive" checked>
                        <span class="checkmark"></span>
                        Grupo ativo
                    </label>
                </div>
                <% } %>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelBtn">
                    Cancelar
                </button>
                <button type="submit" form="groupForm" class="btn btn-primary" id="saveBtn">
                    <span class="btn-text">Salvar</span>
                    <i class="fas fa-spinner fa-spin loading-icon" style="display: none;"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Modal de Usuários do Grupo -->
    <div class="modal-overlay" id="usersModal" style="display: none;">
        <div class="modal-content modal-large">
            <div class="modal-header">
                <h3 id="usersModalTitle">Usuários do Grupo</h3>
                <button class="modal-close" id="closeUsersModal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <% if (user.role === 'admin') { %>
                <div class="users-actions">
                    <button class="btn btn-primary" id="addUserToGroupBtn">
                        <i class="fas fa-user-plus"></i>
                        Adicionar Usuário
                    </button>
                </div>
                <% } %>
                <div class="users-list" id="groupUsersList">
                    <div class="loading-placeholder">
                        <i class="fas fa-spinner fa-spin"></i>
                        Carregando usuários...
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Overlay para mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Scripts -->
    <script src="/js/auth.js"></script>
    <script src="/js/groups.js"></script>
</body>
</html>

